!!! 5
html
  head
    title Growl notification
    meta(http-equiv="content-type", content="text/html; charset=utf-8")
    base(href=baseurl)
    style(type="text/css")
      @import URL("default.css");
  body(style=bodyStyle)
    .container(class=priority, style="opacity: #{opacity}")
      - sliceCount = 10;
      - for(var i=0; i< sliceCount; i++)
        div(class="slice#{i}")
          .board
            h1= title
            p= text
      //
        - for(var i=0; i< sliceCount; i++)
          = "\n.slice" + i +" { .slice(" + i + "); }\n"

      img(src=image)
